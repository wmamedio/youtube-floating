{
  "manifest_version": 3,
  "name": "YouTube Floating Player",
  "version": "1.0.0",
  "description": "Keeps the YouTube video fixed at the top of the screen while you scroll through the description and comments.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
